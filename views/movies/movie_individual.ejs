
<h1><%= foundmovie.title %></h1>
<div class="col-md-3">
<img class= "newImage img-responsive" src="/images/<%= foundmovie.poster %>">
</div>
<div class="col-md-9">
  <p><%= foundmovie.description %></p>
</div>

<div style="clear: both"></div>


  <div class="form-group" >
    <form class="comment-user" action="/movies/<%= foundmovie.id %>" method="POST">
    <label for="inputcomments">Comments</label>
    <textarea name="user[review]" type="text" class="form-control" rows="4"></textarea>
    <button class="btn btn-default" type="submit" value='comment'>Comment</button>
  </form>

  </div>



  <% reviewArr.forEach(function(review) { %>
    <div class="container commentBox">
       <div class="row">
          <div class="col-md-8">
             <p> <%= review.comment %> <p>
          </div>
          <form method="POST" action="<%=foundmovie.id%>/reviews/<%= review.id%>?_method=PUT">
            <input type="submit" name="_method" value="Edit">
            <button type="submit">Edit</button>

          <form method="POST" action="<%=foundmovie.id%>/reviews/<%= review.id%>?_method=DELETE">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit">Delete</button>
          </form>
        </div>
    </div>
  <% }) %>
