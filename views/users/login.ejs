
<div class="centreBox">
  <h3 class="loginHead">Login Here</h3>
      <form class="login-user form-horizontal" action="/login" method="post">

        <div class="form-group">
          <label class="col-sm-2 control-label" for="exampleInputEmail3">Email</label>
          <div class="col-sm-10">
            <input class="form-control" type="email" name="user[local][email]" placeholder="Your email" class="u-full-width" required>
          </div>
        </div>

        <div class="form-group">
          <label class="col-sm-2 control-label" for="exampleInputEmail3">Password</label>
          <div class="col-sm-10">
            <input class="form-control" type="password" name="user[local][password]" placeholder="Your password" class="u-full-width" required>
          </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-default" type="submit" value='Log in'>Log In</button>
              <a href="/signup" class="btn btn-default" role="button" aria-pressed="true">New User / Sign Up</a>
            </div>
          </div>

      </form>
    </div>


<% if(message.length > 0) { %>
  <div class="alert alert-danger">
    <%= message %>
  </div>
<% } %>
