<h2>Create new user</h2>

<% if(message.length > 0) { %>
  <h3>Flash Found</h3>
  <div class="alert alert-danger">
    <%= message %>
  </div>
<% } %>

<form class="form-inline" class="new-user-passport" action="/signup" method="post">
  <div class="form-inline">
    <div class="form-group">
      <label class="sr-only" for="exampleInputEmail3">Name</label>
      <input class="form-control" type="text" name="user[local][name]" id="user-name" placeholder="Your name" class="u-full-width">
    </div>
    <div class="form-group">
      <label class="sr-only" for="exampleInputEmail3">Email</label>
      <input class="form-control" type="text" name="user[local][email]" id="user-email" placeholder="Your user email" class="u-full-width">
    </div>
    <div class="form-group">
      <label class="sr-only" for="exampleInputEmail3">Password</label>
      <input class="form-control" type="text" name="user[local][password]" id="user-password" placeholder="Your user password" class="u-full-width">
    </div>
    <button class="btn btn-default" type="submit" value='Save My User'>Sign Up</button>
  </div>

  <ul id="all-user-list">
  <% allUsers.forEach(function(user) { %>
    <li>
        <%= user.local.name %><br>
        <%= user.local.email %><br>
        <%= user.local.password %>
    </li>
  <% }) %>
  </ul>
</form>
